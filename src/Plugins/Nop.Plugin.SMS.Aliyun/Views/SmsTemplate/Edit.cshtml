@model SmsTemplateModel

@{
    //Layout = "~/Areas/Admin/Views/Shared/_AdminPopupLayout.cshtml";
    Layout = "_ConfigurePlugin";
    //page title
    ViewBag.Title = T("Plugins.SMS.Aliyun.SmsTemplate.Edit").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Manage Short Message Template");
}

<form asp-controller="SmsTemplate" asp-action="Edit" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.ContentManagement.MessageTemplates.EditMessageTemplateDetails") - @Model.SystemName
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.ContentManagement.MessageTemplates.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>

            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>

            <button type="submit" id="message-template-copy" name="message-template-copy" class="btn bg-green">
                <i class="fa fa-clone"></i>
                @T("Plugins.SMS.Aliyun.SmsTemplate.Copy")
            </button>
            <nop-action-confirmation asp-button-id="message-template-copy" />
            <span id="message-template-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_message_template_details_buttons", additionalData = Model.Id })
        </div>
    </div>
    @*@await Html.PartialAsync("_CreateOrUpdate", Model)*@
    @await Html.PartialAsync("~/Plugins/SMS.Aliyun/Views/SmsTemplate/_CreateOrUpdate.cshtml", Model)
</form>